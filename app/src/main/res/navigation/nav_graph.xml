<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/weatherFragment">

    <fragment
        android:id="@+id/weatherFragment"
        android:name="com.example.weather.ui.weather.WeatherFragment"
        android:label="fragment_xml"
        tools:layout="@layout/fragment_weather" >
        <action
            android:id="@+id/action_go_to_edit"
            app:destination="@id/editCitiesFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/editCitiesFragment"
        android:name="com.example.weather.ui.edit.EditCitiesFragment"
        android:label="fragment_edit_cities"
        tools:layout="@layout/fragment_edit_cities" >
        <action
            android:id="@+id/action_go_to_weathers"
            app:destination="@id/weatherFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>
</navigation>